<h3><a class="btn btn-secondary" href="/record"><i class="fa fa-plus"></i> Create New</a> Spend Record List</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Vendor Name</th>
            <th>Item Name</th>
            <th>Amount</th>
            <th>Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.vendorName}}</td>
            <td>{{this.itemName}}</td>
            <td>{{this.amount}}</td>
            <td>{{this.date}}</td>
            <td>
                <a href="/record/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/record/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
